#!name = 搜索网页去广告
#!desc = 移除搜索移动端网页的首页广告信息流
#!openUrl = 
#!author = Keywos
#!category=去广告
#!date = 2023-09-12 20:30:28

[MITM]
hostname = %APPEND% www.baidu.com, m.baidu.com, cn.bing.com, www.bing.com, www.google.com, www.google.com.hk

[Script]
移除百度搜索首页信息流广告 = type=http-response,pattern=^https?:\/\/(www|m)\.baidu\.com\/?($|\?from=\w{8,9}),script-path=https://raw.githubusercontent.com/linuszlx/JS/main/BaiduSearch/BaiduSearchHomePage_remove_ads.js, requires-body=true
知道搜索广告(zhidao.baidu.com) = type=http-response , pattern="^https?:\/\/(zhidao)\.baidu\.com\/(question|index|\?fr|\?word)" , requires-body=1 , max-size=-1 , script-path=https://limbopro.com/Adguard/Adblock4limbo.js , script-update-interval=0
搜索首页广告(www.baidu.com) = type=http-response , pattern="https?:\/\/(www|m)\.baidu\.com(/$|\/\?ref.*)" , requires-body=1 , max-size=-1 , script-path=https://limbopro.com/Adguard/Adblock4limbo.js , script-update-interval=0
搜索结果广告(www.baidu.com) = type=http-response , pattern="https?:\/\/(www|m)\.baidu\.com\/(from=|s\?)" , requires-body=1 , max-size=-1 , script-path=https://limbopro.com/Adguard/Adblock4limbo.js , script-update-interval=0
内容农场(www.bing.com) = type=http-response , pattern="^https?:\/\/((www|cn)\.bing)(\.\w{2,4}){1,2}\/(search\?.*|\?sa=|\?FORM)(?!.*?(apps=))" , requires-body=1 , max-size=0 , script-path=https://limbopro.com/Adguard/Adblock4limbo.js , script-update-interval=0
内容农场(www.google.com|com.hk) = type=http-response , pattern="^https?:\/\/(www\.google)(\.\w{2,4}){1,2}\/(search\?|\?sa=|\?FORM)(?!.*?(apps=))" , requires-body=1 , max-size=0 , script-path=https://limbopro.com/Adguard/Adblock4limbo.js , script-update-interval=0
